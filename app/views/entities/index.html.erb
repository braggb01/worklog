<div class="row">
    <div class="span12 vspacerf">
        <h3 style="display:inline;">Entities</h3>
        <div class="btn-group pull-right">
            <button class="btn btn-success"><i class="icon-cog"></i> Actions</button>
            <button class="btn btn-success dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li><%= link_to 'New Entity', new_entity_path %></li>
            </ul>
        </div>
    </div>
</div>
<div class="row">
    <div class="span12 vspacerf">
        <% if @entities.count < 1 %>
            <h3>You have not entered any Entities yet.  <%= link_to 'Enter One Now', new_entity_path %></h3>
        <% else %>
            <table class="table">
                <thead>
                    <th>Name</th>
                    <th>Action</th>
                </thead>
                <tbody id="entities">
                    <%= render @entities %>
                </tbody>
            </table>

            <%= will_paginate @entities %>
        <% end %>
    </div>
</div>