<div class="row">
	<div class="span12 vspacerf">
		<h3 style="display:inline;">System Users</h3>
	    <div class="btn-group pull-right">
		    <button class="btn btn-success"><i class="icon-cog"></i> Actions</button>
		    <button class="btn btn-success dropdown-toggle" data-toggle="dropdown">
		    	<span class="caret"></span>
		    </button>
		    <ul class="dropdown-menu">
			    <li><a href="#">All Users</a></li>
			    <li><a href="#">Admin Users</a></li>
		    </ul>
	    </div>
	</div>
</div>
<div class="row">
	<div class="span12 vspacerf">
		<table class="table">
			<thead>
				<th> </th>
				<th>Name</th>
				<th>Email Address</th>
				<% if current_user.admin? %><th>Action</th><% end %>
			</thead>
			<tbody>
				<%= render @users %>
			</tbody>
		</table>

		<%= will_paginate %>
	</div>
</div>
