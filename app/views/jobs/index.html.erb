<div class="row">
    <div class="span12 vspacerf">
        <h3 style="display:inline;">Jobs</h3>
        <div class="btn-group pull-right">
            <button class="btn btn-success"><i class="icon-cog"></i> Actions</button>
            <button class="btn btn-success dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li><%= link_to 'New Job', new_job_path %></li>
            </ul>
        </div>
    </div>
</div>
<div class="row">
    <div class="span12 vspacerf">
        <% if @jobs.count < 1 %>
            <h3>You have not entered any Jobs yet.  <%= link_to 'Enter One Now', new_job_path %></h3>
        <% else %>
            <table class="table">
                <thead>
                    <th>Entity</th>
                    <th>Location</th>
                    <th>Floor</th>
                    <th>Product</th>
                    <th>Engineer</th>
                    <th>Install Date</th>
                    <th>Action</th>
                </thead>
                <tbody id="jobs">
                    <%= render @jobs %>
                </tbody>
            </table>

            <%= will_paginate @jobs %>
        <% end %>
    </div>
</div>
